<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >



    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:alwaysDrawnWithCache="false"
        android:animateLayoutChanges="false"
        android:soundEffectsEnabled="true"
        android:splitMotionEvents="true"
        app:cardBackgroundColor="#F0FFD740"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:id="@+id/relativeid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="5dp">

            <TextView
                android:id="@+id/grocery_item_id"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Grocery Items"
                android:textColor="#D5000000"
                android:textSize="18sp"
                app:fontFamily="@font/alfa_slab_one" />

            <TextView
                android:id="@+id/grocery_qty_id"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/grocery_item_id"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Qty"
                android:textColor="#2233CA"
                android:textSize="14sp"
                android:textStyle="italic"
                app:fontFamily="@font/capriola" />

            <TextView
                android:id="@+id/date_id"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/grocery_qty_id"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Date"
                android:textColor="#E60D0D"
                android:textSize="13sp"
                app:fontFamily="@font/capriola" />


            <Button
                android:id="@+id/edit_id"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="0dp"

                android:background="@android:drawable/ic_menu_edit" />

            <Button
                android:id="@+id/dlt_id"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="55dp"
                android:layout_alignParentRight="true"
                android:background="@android:drawable/ic_menu_delete" />



        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>